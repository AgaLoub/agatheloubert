      <div class="contact-form">
        <%= simple_form_for Contact.new, :html => {:class => 'form-horizontal' } do |f| %>
          <%= f.error_notification %>
              <%= f.input :nom, :required => true, :placeholder=> ('Votre nom'), :error_html => { :id => "name_error"} %>
              <%= f.input :email, :required => true, :placeholder=> ('Votre email'), :error_html => { :id => "name_error"} %>
              <div class="textarea text-center">
                <%= f.text_area(:message, :placeholder=>('Votre message'))%>
              </div>
              <div class= "hidden">
                <%= f.input :nickname, :hint => 'Leave this field blank!' %>
              </div>

              <div class="btn-form text-center">
                <%= f.submit "Envoyer", :class => "btn-cadre btn"%>
              </div>
            </div>
          <% end %>

        <div class="bloc-infos">
            <p>Si vous souhaitez me contacter directement, voici mon adresse mail : <a href="mailto:agathe.loubert@gmail.com"><%= image_tag "mail.png" %></a></p>
